{
  "name": "action-ktlint",
  "version": "1.0.0",
  "private": true,
  "description": "A tool to enforce Kotlin style and conventions",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yutailang0119/action-ktlint.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Yutaro Muta",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/glob": "^0.2.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/parser": "^4.29.2",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.30.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "jest-circus": "^27.0.6",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  }
}
